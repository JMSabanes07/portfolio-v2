---
import { Icon } from 'astro-icon/components'
const { title, icon, sectionId } = Astro.props
---

<section section-id={sectionId} class="container">
  <h2><Icon name={icon} /> {title}</h2>
  <slot />
</section>

<style>
  .container {
    display: grid;
    gap: 2rem;
    padding: 2rem;
  }

  h2 {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    font-size: 2.5rem;
  }

  [data-icon] {
    font-size: 1.5rem;
    color: var(--text-color);
  }
</style>
